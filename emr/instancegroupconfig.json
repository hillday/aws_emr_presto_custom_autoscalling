[
    {
       "Name":"Master",
       "InstanceCount":1,
       "InstanceGroupType":"MASTER",
       "InstanceType":"c6g.4xlarge",
       "EbsConfiguration": {
          "EbsOptimized": true,
          "EbsBlockDeviceConfigs": [
            {
              "VolumeSpecification": {
                "VolumeType": "gp3",
                "SizeInGB": 40
              }
             }
          ]
       }
    },
    {
       "InstanceCount":3,
       "InstanceGroupType":"CORE",
       "InstanceType":"c6g.4xlarge",
       "Name":"Core"
    },
    {
       "InstanceCount":7,
       "AutoScalingPolicy":{
          "Constraints":{
             "MinCapacity":3,
             "MaxCapacity":10
          },
          "Rules":[
             {
                "Action":{
                   "SimpleScalingPolicyConfiguration":{
                      "ScalingAdjustment":1,
                      "CoolDown":60,
                      "AdjustmentType":"CHANGE_IN_CAPACITY"
                   }
                },
                "Description":"",
                "Trigger":{
                   "CloudWatchAlarmDefinition":{
                      "MetricName":"PrestoInputBytes5m",
                      "ComparisonOperator":"GREATER_THAN_OR_EQUAL",
                      "Statistic":"MAXIMUM",
                      "Period":60,
                      "Dimensions":[
                         {
                            "Value":"${emr.clusterId}",
                            "Key":"JobFlowId"
                         }
                      ],
                      "EvaluationPeriods":1,
                      "Unit":"BYTES",
                      "Namespace":"AWS/ElasticMapReduce",
                      "Threshold":100
                   }
                },
                "Name":"scale-out-query-time-5"
             },
             {
                "Action":{
                   "SimpleScalingPolicyConfiguration":{
                      "ScalingAdjustment":-1,
                      "CoolDown":60,
                      "AdjustmentType":"CHANGE_IN_CAPACITY"
                   }
                },
                "Description":"",
                "Trigger":{
                   "CloudWatchAlarmDefinition":{
                      "MetricName":"PrestoInputBytes5m",
                      "ComparisonOperator":"LESS_THAN",
                      "Statistic":"MINIMUM",
                      "Period":60,
                      "Dimensions":[
                         {
                            "Value":"${emr.clusterId}",
                            "Key":"JobFlowId"
                         }
                      ],
                      "EvaluationPeriods":1,
                      "Unit":"BYTES",
                      "Namespace":"AWS/ElasticMapReduce",
                      "Threshold":50
                   }
                },
                "Name":"scalein-input-time5"
             }
          ]
       },
       "InstanceGroupType":"TASK",
       "InstanceType":"c6g.4xlarge",
       "Name":"Task"
    }
 ]